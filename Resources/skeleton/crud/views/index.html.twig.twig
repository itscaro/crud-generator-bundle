{% block extends %}
{{ "{% extends 'ItscaroCrudGeneratorBundle::layout.html.twig' %}" }}
{% endblock extends %}

{% block title %}
{{ "{% block title %}" }}
{{ "{{ parent() }} - {{ 'views.index.list'|trans({'%entity%': '" }}{{ entity }}{{ "'}, 'ItscaroCrudGeneratorBundle') }}" }}
{{ "{% endblock %}" }}
{% endblock title %}

{% block body %}
{{ "{% block body %}" }}
<div class="row">
    <div class="col-xs-12">
        <h1>{{ "{{ 'views.index.list'|trans({'%entity%': '" }}{{ entity }}{{ "'}, 'ItscaroCrudGeneratorBundle') }}" }}</h1>
    </div>

    <div class="col-xs-12">
        {{ '{% if form_errors(filterForm) %}' }}
        <div class="alert alert-block alert-error fade in form-errors">
            {{ '{{ form_errors(filterForm) }}' }}
        </div>
        {{ '{% endif %}' }}
        &nbsp;
    </div>

    <div class="col-xs-12">
        <div class="filters-right">
            <a class="btn dropdown-toggle" data-toggle="collapse" data-target="#filters">
                {{ "{{ 'views.index.filters'|trans({}, 'ItscaroCrudGeneratorBundle') }}" }}
                <span class="caret"></span>
            </a>
        </div>
    </div>

    <div class="col-xs-12">
        <div id="filters" class="collapse">
            <form class="well" action="{{ "{{ path('"~ route_name_prefix ~"') }}" }}" method="get" {{ "{{ form_enctype(filterForm) }}" }}>

                {%- for field, metadata in fields %}

                {{ "{{ form_row(filterForm." ~ field ~ ") }}" }}

                {%- endfor %}

                {{ "{{ form_rest(filterForm) }}" }}

                <p>
                    <button type="submit" name="filter_action" value="filter">{{ "{{ 'views.index.filter'|trans({}, 'ItscaroCrudGeneratorBundle') }}" }}</button>
                    <button type="submit" name="filter_action" value="reset">{{ "{{ 'views.index.reset'|trans({}, 'ItscaroCrudGeneratorBundle') }}" }}</button>
                </p>
            </form>
        </div>
    </div>

    <div class="col-xs-12">
        <table class="table table-striped table-bordered table-condensed">
            <thead>
                <tr>
                {%- for field, metadata in fields %}

                    <th>{{ "{{ '" ~ ['entity.' , entity, '.', field]|join|lower ~ "'|trans({}, 'ItscaroCrudGeneratorBundle') }}" }}</th>

                {%- endfor %}

                    <th>{{ "{{ 'views.index.actions'|trans({}, 'ItscaroCrudGeneratorBundle') }}" }}</th>

                </tr>
            </thead>
            <tbody>
            {{ '{% for entity in entities %}' }}
                <tr>
            {%- for field, metadata in fields %}
                {%- if loop.first and ('show' in actions) %}

                    <td><a href="{{ "{{ path('"~ route_name_prefix ~"_show', { 'id': entity.id }) }}" }}">{{ '{{ entity.'~ field|replace({'_': ''}) ~' }}' }}</a></td>

                {%- elseif metadata.type in ['date', 'datetime'] %}

                    <td>{{ '{% if entity.'~ field|replace({'_': ''}) ~' %}{{ entity.'~ field|replace({'_': ''}) ~'|date(\'Y-m-d H:i:s\') }}{% endif %}' }}</td>

                {%- else %}

                    <td>{{ '{{ entity.'~ field|replace({'_': ''}) ~' }}' }}</td>

                {%- endif %}

                {%- if loop.last %}

                    <td>
                        {%- include "crud/views/others/actions.html.twig.twig" %}
                    </td>

                {%- endif %}
            {%- endfor %}
                </tr>
            {{ '{% endfor %}' }}
            </tbody>
        </table>
    </div>

    <div class="col-xs-12 navigation">
        {{ "{{ knp_pagination_render(entities) }}" }}
    </div>

    {% if 'new' in actions %}
    <div class="col-xs-12">
        <a class="btn btn-primary likepaginator" href="{{ "{{ path('"~ route_name_prefix ~"_new') }}" }}">
            {{ "{{ 'views.index.createnew'|trans({}, 'ItscaroCrudGeneratorBundle') }}" }} {{ entity }}
        </a>
    </div>
    {% endif %}
</div>
{{ "{% endblock %}" }}
{% endblock body %}
