<div>
    <div class="float-left">
        <a class="btn btn-default" href="{{ "{{ path('"~ route_name_prefix ~"') }}" }}">
            {{ "{{ 'views.recordactions.backtothelist'|trans({}, 'ItscaroCrudGeneratorBundle') }}" }}
        </a>
    </div>

{% if ('edit' in actions) and (not hide_edit) %}
    <div class="float-left">
        <a class="btn btn-warning" href="{{ "{{ path('"~ route_name_prefix ~"_edit', { 'id': entity.id }) }}" }}">
            {{ "{{ 'views.recordactions.edit'|trans({}, 'ItscaroCrudGeneratorBundle') }}" }}
        </a>
    </div>
{% endif %}

{% if ('delete' in actions) and (not hide_delete) %}
    <div class="float-left">
        <form action="{{ "{{ path('"~ route_name_prefix ~"_delete', { 'id': entity.id }) }}" }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ '{{ form_widget(delete_form) }}' }}
            <button class="btn btn-danger" type="submit" onclick="return confirm('{{ "{{ 'views.recordactions.confirm'|trans({}, 'ItscaroCrudGeneratorBundle') }}" }}');">{{ "{{ 'views.recordactions.delete'|trans({}, 'ItscaroCrudGeneratorBundle') }}" }}</button>
        </form>
    </div>
{% endif %}
</div>
